{
  "name": "trestle-api",
  "version": "1.0.0",
  "description": "GraphQL Lambda API",
  "scripts": {
    "lint": "eslint --fix src test",
    "predeploy": "yarn test",
    "deploy": "serverless deploy",
    "undeploy": "serverless remove",
    "s3Config": "serverless s3deploy",
    "prestart": "yarn test",
    "start": "serverless offline start --stage dev",
    "pretest": "yarn lint",
    "test": "jest unit",
    "integration-test": "jest integration",
    "watch": "jest unit --watch",
    "ci": "jest unit --ci",
    "coverage": "jest unit --coverage --collectCoverageFrom=src/**/*.js"
  },
  "jest": {
    "verbose": true,
    "reporters": [
      "default",
      "jest-junit"
    ]
  },
  "jest-junit": {
    "suiteName": "jest tests",
    "output": "./test-results/jest/results.xml",
    "classNameTemplate": "{classname}-{title}",
    "titleTemplate": "{classname}-{title}",
    "ancestorSeparator": " â€º ",
    "usePathForSuiteName": "true"
  },
  "dependencies": {
    "apollo-server-lambda": "^2.3.1",
    "graphql": "^14.0.2",
    "uuid": "^3.3.2"
  },
  "devDependencies": {
    "eslint": "^5.12.0",
    "eslint-config-airbnb-base": "^13.1.0",
    "eslint-plugin-import": "^2.14.0",
    "jest": "^23.6.0",
    "jest-junit": "^6.0.1",
    "serverless": "^1.36.0",
    "serverless-dynamodb-local": "0.2.30",
    "serverless-offline": "^3.32.2",
    "supertest": "^3.3.0"
  }
}
